{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure Windows/x64/Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", "${workspaceFolder}",
        "-B", "${workspaceFolder}/build",
        "-G", "Visual Studio 17 2022",
        "-A", "x64",
        "-T", "host=x64",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "CMake: build Windows/x64/Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "${workspaceFolder}/build",
        "--config", "Debug"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "CMake: Windows/x64/Debug",
      "dependsOrder": "sequence",
      "dependsOn": ["CMake: configure Windows/x64/Debug", "CMake: build Windows/x64/Debug"],
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "CMake: configure Darwin/arm64/Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", "${workspaceFolder}",
        "-B", "${workspaceFolder}/build",
        "-U", "CMAKE_OSX_SYSROOT",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
        "-DCMAKE_BUILD_TYPE:STRING=Debug"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "CMake: build Darwin/arm64/Debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "${workspaceFolder}/build",
        "--config", "Debug"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": { "reveal": "always" }
    },
    {
      "label": "CMake: Darwin/arm64/Debug",
      "dependsOrder": "sequence",
      "dependsOn": ["CMake: configure Darwin/arm64/Debug", "CMake: build Darwin/arm64/Debug"],
      "group": "build",
      "presentation": { "reveal": "always" }
    }
  ]
}
